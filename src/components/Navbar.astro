---
import CreateBlogPopup from './CreateBlogPopup';
import BurgerMenu from './BurgerMenu';
import UserPopover from './UserPopover';
---
<nav aria-label="Main navigation" id="main-nav">
  <h1>Blogs</h1>
  <ul id="nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/blogs">Blogs</a></li>
    <li><a href="/my-blogs">My Blogs</a></li>
  </ul>
  <div class="burger">
    <UserPopover client:load />
    <BurgerMenu client:load />
  </div>

  <div class="create">
    <UserPopover client:load />
    <CreateBlogPopup client:load />
  </div>
</nav>

<style>
  nav {
    position: sticky;
    left: 0;
    top: 0;
    background-color: #CBD5E1;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 40;
  }
  nav a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
  }
  nav a:hover {
    color: #0070f3;
  }
  /* Desktop navigation */
  nav ul {
    list-style: none;
    background-color: transparent;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1rem;
  }
  .burger {
    display: none;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
  }
  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }
  .create {
    display: flex;
    gap: 10px;
  }
  /* Mobile navigation: hide desktop links and show burger */
  @media (max-width: 768px) {
    nav ul {
      display: none;
    }
    .burger {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }
    .create {
      display: none;
    }
  }
</style>
